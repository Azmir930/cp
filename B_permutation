#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
void solve()
{
    ll n;
    cin >> n;
    cout << 2 * n - 3 << endl;
    cout << 1 << " " << 2 << " " << n << endl;
    for (ll i = 2; i <= n - 2; i++)
    {
        cout << i << " " << 1 << " " << i << endl;
        cout << i << " " << i + 1 << " " << n << endl;
    }
    cout << n - 1 << " " << 1 << " " << n - 1 << endl;
    cout << n << " " << 1 << " " << n << endl;
}
int main()
{
    ll t;
    cin >> t;
    while (t--)
    {
        solve();
    }
}